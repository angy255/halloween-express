      <span class = "spider"><i class="fa-solid fa-spider" aria-hidden="true"></i></span>
      <span class = "ghost"><i class="fa-solid fa-ghost" aria-hidden="true"></i></span>
      <span class = "tp"><i class="fa-solid fa-toilet-paper" aria-hidden="true"></i></span>
      <img src = "<%= messages[i].pic %>">
      <span class = "genre"><%= messages[i].genre %></span>
      <span class = "description"><%= messages[i].description %></span>
    </li>
  <% } %>
