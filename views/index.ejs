<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>'Tis the season</title>
  <link rel="icon" type="image/x-icon" href="pumpkin.svg">
  <link rel="stylesheet" href="styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Rubik+Wet+Paint&family=Vend+Sans:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Marcellus&family=Rubik+Wet+Paint&family=Vend+Sans:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">
</head>

<body>
  <h1>Spooky Picks üéÉ</h1>
  <h2>This year's TOP FILMS</h2>

  <button onclick="playMusic()" class="playBtn">Play me if you dare...</button>
  <audio id="myAudio" src="halloween-music.mp3"></audio>

  <div class="kanban-board">
    <!-- Must Watch Column -->
    <div class="kanban-column" data-status="must-watch">
      <h3>‚≠ê Must See ‚≠ê</h3>
      <ul class="messages">
        <% for(let i=0; i<messages.length; i++) {%>
          <% if(!messages[i].status || messages[i].status === 'must-watch') {%>
            <li class="message">
              <span class="title"><%= messages[i].name %></span>
              <span class="year"><%= messages[i].msg %></span>
              <img src="<%= messages[i].pic %>">
              <span class="genre"><%= messages[i].genre %></span>
              <span class="description"><%= messages[i].description %></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>

    <!-- Worth Watching Column -->
    <div class="kanban-column" data-status="worth-watching">
      <h3>Worth Watching üç¨ </h3>
      <ul class="messages">
        <% for(let i=0; i<messages.length; i++) {%>
          <% if(messages[i].status === 'worth-watching') {%>
            <li class="message">
              <span class="title"><%= messages[i].name %></span>
              <span class="year"><%= messages[i].msg %></span>
              <img src="<%= messages[i].pic %>">
              <span class="genre"><%= messages[i].genre %></span>
              <span class="description"><%= messages[i].description %></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>

    <!-- Hard Pass Column -->
    <div class="kanban-column" data-status="hard-pass">
      <h3>Hard Pass üëª </h3>
      <ul class="messages">
        <% for(let i=0; i<messages.length; i++) {%>
          <% if(messages[i].status === 'hard-pass') {%>
            <li class="message">
              <span class="title"><%= messages[i].name %></span>
              <span class="year"><%= messages[i].msg %></span>
              <img src="<%= messages[i].pic %>">
              <span class="genre"><%= messages[i].genre %></span>
              <span class="description"><%= messages[i].description %></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </div>

  <h3>Add movie</h3>

  <form action="/messages" method="POST">
    <input type="text" placeholder="title" name="name">
    <input type="number" placeholder="year" name="msg">
    <input type="text" placeholder="img url" name="pic">
    <input type="text" placeholder="genre" name="genre">
    <input type="text" placeholder="description" name="description">
    <button type="submit">Submit</button>
  </form>

  <script src="https://kit.fontawesome.com/66a5eab7b2.js" crossorigin="anonymous"></script>
  <script src="main.js"></script>
</body>
</html>